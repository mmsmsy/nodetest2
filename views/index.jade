extends layout

block content
    h1= title
    p Welcome to our test

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Userame:
                |  <span id='userInfoUsername'></span>
                br
                strong Password:
                |  <span id='userInfoPasswordd'></span>
                br
                strong Name:
                |  <span id='userInfoNamee'></span>
                br
                strong Surname:
                |  <span id='userInfoSurname'></span>
                br
                strong Date of Birth:
                |  <span id='userInfoDateofbirth'></span>
                br
                strong List:
                |  <span id='userInfoListt'></span>
        // /USER INFO

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserUsername
                    th Passwordd
                    th Delete?
                tbody
        // /USER LIST

        // ADD USER
        h2 Add User
        #addUser
            fieldset
                input#inputUserUsername(type='text', placeholder='Username')
                input#inputUserPasswordd(type='text', placeholder='Password')
                br
                input#inputUserNamee(type='text', placeholder='Name')
                input#inputUserSurname(type='text', placeholder='Surname')
                br
                input#inputUserDateofbirth(type='text', placeholder='Date of Birth')
                input#inputUserListt(type='text', placeholder='List')
                br
                button#btnAddUser Add User
        // /ADD USER

    // /WRAPPER
